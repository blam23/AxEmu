<Window x:Class="AxWPF.NESWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NES"
        Height="708"
        Width="480"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp"
        >
    <Grid>
        <Image x:Name="image" 
               RenderOptions.BitmapScalingMode="NearestNeighbor"
               Height="508"
               Width="480" 
               Margin="0,0,0,0" 
               VerticalAlignment="Top"
               />
        <Button Margin="5,0,5,102"  Height="28" VerticalAlignment="Bottom" Click="LogFromNextKeypress_Clicked">Log From Next Keypress</Button>
        <Button Margin="5,0,5,70" Height="28" VerticalAlignment="Bottom" Click="Run_Click" >Run</Button>
        <Button Margin="5,0,5,38" Height="28" VerticalAlignment="Bottom" Click="Pause_Click" >Pause</Button>
        <Button Margin="5,0,5,5"  Height="28" VerticalAlignment="Bottom" Click="RunFrame_Click">Run to Next Frame</Button>
    </Grid>
</Window>
