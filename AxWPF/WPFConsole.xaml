<Window x:Class="AxWPF.WPFConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AxWPF"
        mc:Ignorable="d"
        Background="Black"
        Title="WPFConsole" Height="450" Width="800">
    <Grid>
        <ScrollViewer x:Name="scroll">
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Margin="5,5,5,5" Text="" Foreground="WhiteSmoke" FontFamily="Cascadia Code Light"/>
        </ScrollViewer>
    </Grid>
</Window>
